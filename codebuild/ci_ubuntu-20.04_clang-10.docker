FROM ubuntu:20.04

SHELL ["/bin/bash", "-c"]

RUN set -ex && \
    apt-get update && \
    apt-get -y --no-install-recommends upgrade && \
    apt-get -y --no-install-recommends install \
    ninja-build \
    ca-certificates \
    cmake \
    golang \
    clang && \
    apt-get clean && \
    apt-get autoclean

ENV CC=clang
ENV CXX=clang++
